#:kivy 2.0.0
<ProductRow>:
    cols: 5
    size_hint_y: None
    height: "80dp"
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    TextInput:
        id: product_name
        hint_text: "Nazwa produktu"

    TextInput:
        id: quantity
        hint_text: "Ilość"

    Spinner:
        id: unit_spinner
        text: "opak"
        values: ["szt", "opak", "kg"]


    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: "60dp"
        spacing: 0

        Button:
            text: u"\u25B2"  # Strzałka w górę
            size_hint_y: 0.5  # Połowa wysokości
            on_release: app.move_row_up(root)  # Przypisanie funkcji przesuwającej wiersz w górę

        Button:
            text: u"\u25BC"  # Strzałka w dół
            size_hint_y: 0.5  # Połowa wysokości
            on_release: app.move_row_down(root)

    Button:
        text: "X"
        size_hint_x: None
        width: "60dp"
        on_release: root.remove_row()
    
   
       

<MainApp>:
    orientation: 'vertical'


